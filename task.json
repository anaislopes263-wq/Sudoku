{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build sdl2",
      "type": "shell",
      "command": "gcc",
      "args": [
        "main_interface.c",
        "-o",
        "app.exe",
        "`sdl2-config --cflags --libs`"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "run sdl2",
      "type": "shell",
      "command": "./app.exe",
      "dependsOn": ["build sdl2"]
    }
  ]
}
